$link-color = $core-link-color


// Component: Component
// ========================================================================

.pagination
  display flex
  list-style none
  margin 0
  padding 0
  font-size $font-small

  .page-item
    margin 1rem .1rem

    span
      display inline-block
      padding .6rem .4rem

    a
      border-radius $core-radius
      color $link-color
      display inline-block
      padding .4rem 1rem
      text-decoration none
      &:focus,
      &:hover
        background alpha($color-grey-100, .12)
        color $color-primary
      &[disabled],
      &.disabled
        cursor default
        opacity .5
        pointer-events none

    &.active
      a
        background $color-primary
        color $core-text-color-invert

    &.page-prev,
    &.page-next
      flex 1 0 50%

    &.page-next
      text-align right

    .page-item-title
      margin 0

    .page-item-subtitle
      margin 0
      opacity .5
