// Dropdowns
// ---------

.dropdown
  cursor pointer

  a.dropdown__toggle
    // padding ($core-nav-height / 2 - .8rem) 1rem
    // padding-left 0

    &:focus
      outline none
      + .dropdown-content
        visibility visible
        opacity 1

  i.caret
    display inline-flex
    &::after
      content ''
      position absolute
      top ($core-nav-height / 2) - .2rem
      width .8rem
      height .4rem
      margin-left -.5rem
      background url('data:image/svg+xml;base64,') center right no-repeat
      background-size 100% 100%
      opacity .6

.dropdown-content
  overflow-y auto
  display block
  visibility hidden
  z-index $z-index-10
  position absolute
  top ($core-nav-height + .1rem)
  right 0
  background-color $color-white
  min-width 16rem
  max-height 50vh
  padding 0
  font-size $font-small
  list-style none
  text-align left
  opacity 0
  border $core-border-width solid $core-border-color
  border-radius 0 0 $core-radius $core-radius
  box-shadow 0 .4rem .6rem alpha($color-black, .16)
  transition visibility 0s .15s, opacity .15s

  li
    margin 0

    a
      color $color-grey
      padding 1rem 1.8rem
      text-decoration none
      display block
      &:hover
        color $color-primary
        background $color-grey-1000

.dropdown-content::-webkit-scrollbar
  width .4rem

.dropdown-content::-webkit-scrollbar-thumb
  background alpha($color-black, .2)
  border-radius 1rem
