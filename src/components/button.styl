// Name:            Button
// Description:     Styles for buttons
//
// Namespace:       `btn`
//
// Modifiers:       `btn--sm`
//                  `btn--lg`
//                  `btn--outline`
//                  `btn--clear`
//                  `btn--raised`
//                  `btn--block`
//                  `btn--narrow`
//                  `btn--$color`
//
//
// ========================================================================


// Variables
// ========================================================================
$btn-background = $color-grey-1000
$btn-background-hover = $color-grey-900
$btn-color = $core-text-color
$btn-border-color = $core-border-color
$btn-border-color-hover = $btn-border-color



// Component: Component
// ========================================================================

.btn,
button,
input[type='button'],
input[type='reset'],
input[type='submit']
  display inline-block
  padding 0 3rem
  height 3.8rem
  background-color $btn-background
  color $btn-color
  cursor pointer
  font-size 1.1rem
  font-weight 700
  text-align center
  text-decoration none
  text-transform uppercase
  letter-spacing .1rem
  line-height 3.3
  white-space nowrap
  vertical-align middle
  user-select none
  opacity 1
  border .1rem solid $btn-border-color
  border-radius $core-radius
  transition all .2s ease

  &:hover,
  &:focus
    outline 0
    background-color $btn-background-hover
    color $btn-color
    text-decoration none
    border-color $btn-border-color-hover
    transition all .2s ease

  &.disabled,
  &[disabled]
    pointer-events none
    cursor default
    background-color $btn-background
    border-color $btn-background
    color $color-grey-700
    opacity .5

    &:hover,
    &:focus
      background-color $btn-background
      border-color $btn-background
      color $color-grey-700

  &.btn--outline
    background-color transparent
    color inherit
    box-shadow none

    &:hover,
    &:focus
      background-color alpha($color-grey-300, .1)
      border-color alpha($color-grey-300, .2)
      color inherit

  &.btn--clear
    background-color transparent
    border-color transparent
    color inherit
    box-shadow none

    &:hover,
    &:focus
      background-color alpha($color-grey-300, .1)
      border-color transparent
      color inherit

  &.btn--raised
    core-shadow()

    &:hover
      transform translateY(-.1rem)
      box-shadow 0 .3rem .6rem 0 alpha($color-black, .1)

  &.btn--sm
    font-size: .8rem
    height: 2.8rem
    line-height: 2.8rem
    padding: 0 1.5rem

  &.btn--lg
    height: 4.8rem
    padding: 0 2rem
    line-height: 4.8rem

  &.btn--block
    display: block
    width: 100%

  &.btn--narrow
    padding: 0 1.5rem

  // Set styles for each colors defined in _Variables.sass
  for name, color in colors
    $color = color["color"]
    $invert = color["invert"]
    &.btn--{name}
      background-color $color
      border-color $color
      color $invert

      &:hover,
      &:focus
        background spin($color, 6deg)
        border-color spin($color, 6deg)
        color $invert

      &:active
        border-color transparent

      &.btn--outline
        background transparent
        border-color $color
        color $color

        &:hover,
        &:focus
          background-color alpha($color, .1)
          border-color alpha($color, .5)
          color $color

      &.btn--clear
        background-color transparent
        border-color transparent
        color $color

        &:hover,
        &:focus
          background-color rgba($color, .1)
          border-color transparent
          color $color

      &.btn--inverted
        background $invert
        color $color
        &:hover
          background $invert

        &.btn--outline
          background-color transparent
          border-color $invert
          color $invert
          &:hover
            background rgba($color-black, .5)

// Button Groups
.btn__group
  display inline-flex
  flex-wrap wrap

  .btn
    flex 1 0 auto

    &:first-child:not(:last-child)
      border-bottom-right-radius 0
      border-top-right-radius 0

    &:not(:first-child):not(:last-child)
      border-radius 0
      margin-left -.1rem

    &:last-child:not(:first-child)
      border-bottom-left-radius 0
      border-top-left-radius 0
      margin-left -.1rem

    &:hover,
    &:focus
      z-index 99

  &.btn__group--block
    display flex
